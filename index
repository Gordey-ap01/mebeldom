    <!-- Firebase & Logic -->
    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
        import { getAuth, signInAnonymously, onAuthStateChanged, signInWithCustomToken } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';
        import { getFirestore, collection, addDoc, onSnapshot, query, orderBy, serverTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';

        const firebaseConfig = JSON.parse(__firebase_config);
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';

        let user = null;

        const initAuth = async () => {
             if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                await signInWithCustomToken(auth, __initial_auth_token);
             } else {
                await signInAnonymously(auth);
             }
        };
        initAuth();

        onAuthStateChanged(auth, (u) => {
            user = u;
            if(u) { loadProducts(); initQuiz(); }
        });

        // --- Products Logic ---
        const productsGrid = document.getElementById('products-grid');
        
        function loadProducts() {
            const q = query(collection(db, 'artifacts', appId, 'public', 'data', 'products_v2'), orderBy('createdAt', 'desc'));
            onSnapshot(q, (snapshot) => {
                productsGrid.innerHTML = '';
                if(snapshot.empty) {
                    renderDefaultProducts();
                } else {
                    snapshot.forEach(doc => renderProductCard(doc.data()));
                }
            });
        }

        function renderProductCard(data) {
            const div = document.createElement('div');
            div.className = 'group relative bg-wood-800 border border-white/5 overflow-hidden shadow-lg hover:border-gold-400/50 transition-all duration-500';
            div.innerHTML = `
                <div class="h-80 overflow-hidden">
                    <img src="${data.image}" alt="${data.title}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                </div>
                <div class="p-6 relative">
                    <span class="text-[10px] text-gold-400 uppercase tracking-widest font-bold mb-2 block">Premium Collection</span>
                    <h3 class="text-xl font-serif text-white mb-4">${data.title}</h3>
                    <div class="flex justify-between items-center border-t border-white/10 pt-4">
                        <span class="text-xl font-serif text-white">${data.price}</span>
                        <a href="https://wa.me/79638237733" class="text-gold-400 hover:text-white transition-colors uppercase text-[10px] font-bold tracking-widest">Заказать</a>
                    </div>
                </div>
            `;
            productsGrid.appendChild(div);
        }

        function renderDefaultProducts() {
            const defaults = [
                {title: 'Кухня "Верона" (Массив)', price: 'от 180 000 ₽', image: 'https://images.unsplash.com/photo-1556911220-e15b29be8c8f?auto=format&fit=crop&q=80'},
                {title: 'Шкаф-купе "Лофт"', price: 'от 45 000 ₽', image: 'https://images.unsplash.com/photo-1558603668-6570496b66f8?auto=format&fit=crop&q=80'},
                {title: 'Гостиная "Монако"', price: 'от 95 000 ₽', image: 'https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?auto=format&fit=crop&q=80'}
            ];
            defaults.forEach(renderProductCard);
        }

        window.addProduct = async (e) => {
            e.preventDefault();
            if(!user) return;
            const title = document.getElementById('prod-title').value;
            const price = document.getElementById('prod-price').value;
            const image = document.getElementById('prod-image').value;
            
            try {
                await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'products_v2'), {
                    title, price, image, createdAt: serverTimestamp()
                });
                e.target.reset();
                document.getElementById('add-product-form').classList.add('hidden');
            } catch(err) { console.error(err); }
        };

        // --- Quiz Logic ---
        let step = 0;
        let quizData = { type: '', material: '', budget: '', contact: '' };
        const quizContent = document.getElementById('quiz-content');

        const steps = [
            {
                q: "Какую мебель вы ищете?",
                opts: ["Кухня", "Шкаф / Гардеробная", "Детская", "Другое"],
                key: 'type'
            },
            {
                q: "Предпочтительный материал?",
                opts: ["Натуральное дерево", "МДФ / Эмаль", "ЛДСП (Эконом)", "Металл + Стекло"],
                key: 'material'
            },
            {
                q: "Желаемый сегмент?",
                opts: ["Доступный эконом", "Средний (Оптимальный)", "Премиум / Люкс"],
                key: 'budget'
            }
        ];

        window.initQuiz = () => { renderQuizStep(); };

        function renderQuizStep() {
            if (step < steps.length) {
                const s = steps[step];
                quizContent.innerHTML = `
                    <div class="animate-fadeIn">
                        <div class="text-gold-400 font-bold text-xs uppercase tracking-widest mb-2">Шаг ${step + 1} из 4</div>
                        <h3 class="text-3xl font-serif text-white mb-10">${s.q}</h3>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            ${s.opts.map(o => `
                                <button onclick="nextQuizStep('${s.key}', '${o}')" class="p-4 border border-white/10 text-left text-stone-300 hover:border-gold-400 hover:bg-gold-400/10 transition-all font-medium">
                                    ${o}
                                </button>
                            `).join('')}
                        </div>
                    </div>
                `;
            } else {
                quizContent.innerHTML = `
                    <div class="text-center animate-fadeIn">
                        <i data-lucide="gift" class="w-12 h-12 text-gold-400 mx-auto mb-6"></i>
                        <h3 class="text-3xl font-serif text-white mb-4">Почти готово!</h3>
                        <p class="text-stone-400 mb-8">Оставьте ваш телефон, мы пришлем расчет и каталог материалов в WhatsApp.</p>
                        <form onsubmit="finishQuiz(event)" class="space-y-4 max-w-sm mx-auto">
                            <input type="tel" id="q-phone" placeholder="+7 (___) ___-__-__" class="w-full bg-wood-900 border border-white/20 p-4 text-white text-lg focus:border-gold-400 outline-none text-center" required>
                            <button type="submit" class="w-full bg-gold-400 text-wood-900 font-bold py-4 hover:bg-white transition-all uppercase tracking-widest">Получить проект и цену</button>
                        </form>
                    </div>
                `;
                lucide.createIcons();
            }
        }

        window.nextQuizStep = (key, val) => {
            quizData[key] = val;
            step++;
            renderQuizStep();
        };

        window.finishQuiz = async (e) => {
            e.preventDefault();
            quizData.contact = document.getElementById('q-phone').value;
            try {
                if(user) {
                    await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'leads_v2'), {
                        ...quizData, createdAt: serverTimestamp()
                    });
                }
                quizContent.innerHTML = `
                    <div class="text-center animate-fadeIn">
                        <i data-lucide="party-popper" class="w-12 h-12 text-gold-400 mx-auto mb-6"></i>
                        <h3 class="text-3xl font-serif text-white mb-4">Заявка принята!</h3>
                        <p class="text-stone-400">Мы уже начали подбор решений. Свяжемся с вами в течение 15 минут.</p>
                    </div>
                `;
                lucide.createIcons();
            } catch(err) { console.error(err); }
        };

        window.toggleMobileMenu = () => {
             // Logic for mobile toggle could go here
        };

        window.toggleProductForm = () => {
            document.getElementById('add-product-form').classList.toggle('hidden');
        };

        lucide.createIcons();
    </script>
</body>
</html>
